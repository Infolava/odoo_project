    <data>
        <record id="inherited_project_issue_form" model="ir.ui.view" >
            <field name="name">inherited.project.issue_form</field>
            <field name="model">project.issue</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
            <field name="arch" type="xml">
	            <xpath expr="//sheet/label[@for='name']" position="before">
	                <h3>
	                    <field name="issue_ref" readonly="1"/>
	                </h3>
	            </xpath>
                <field name="active" position="after">
	                    <field name="contract_ref" readonly="1" />
                </field>
            </field>
        </record>
        
        </data>
