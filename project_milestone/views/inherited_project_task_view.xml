<openerp>
    <data>
        <record id="inherited_project_milestone_task_form2" model="ir.ui.view" >
            <field name="name">inherited.project.milestone_task_form2</field>
            <field name="model">project.task</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="progress" position="after">
                    <field name="milestone_id" domain="[('project_id', '=', project_id)]" options="{'no_create_edit' : True}" />
                    <field name="milestone_ids" readonly="1" widget="many2many_tags"/>
                </field>
            </field>
        </record>
        
         <record id="inherited_view_task_search_form" model="ir.ui.view">
            <field name="name">extend.project.task.search.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="milestone_id"/>
                </field>
               
               <filter name="project" position="after">
                        <filter string="Milestone" name="milestone" context="{'group_by':'milestone_id'}"/>
                        </filter>
            </field>
		</record>
                
        
        <record id="inherited_project_milestone_task_kanban" model="ir.ui.view" >
            <field name="name">inherited.project.milestone_task_kanban</field>
            <field name="model">project.task</field>
            <field name="priority" eval="1"/>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml"> 
            <field name="project_id" position="after">
                    <br/>
                    <field name="milestone_id"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
