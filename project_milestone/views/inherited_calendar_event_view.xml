<openerp>
    <data>
        
        <!-- Extend the hr.employee tree view -->
        <record id="extended_view_calendar_event_project_form" model="ir.ui.view">
            <field name="name">calendar.event.project.extended.form</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form" />
            <field name="arch" type="xml">
                <field name="duration" position="after">
                    <field name="project_id" string="Project"/>
                </field>
             </field>
        </record>
        
        <record id="extended_view_calendar_event_project_form_popup" model="ir.ui.view">
            <field name="name">calendar.event.project.extended.form.popup</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form_popup" />
            <field name="arch" type="xml">
                <field name="location" position="after">
                    <field name="project_id" string="Project"/>
                </field>
             </field>
        </record>
        
    </data>
</openerp>

