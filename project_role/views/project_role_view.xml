<openerp>

	<data>
		<!-- Define menu actions-->
		<record id="action_project_roles_list_tree_view" model="ir.actions.act_window">
			<field name="name">Project Roles</field>
			<field name="res_model">project.role</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
		</record>
		<!-- Define menus -->
		<menuitem id="menu_roles_2_projects" parent="project.menu_project_management"
				name="Roles in Projects" 
				action="action_project_roles_list_tree_view" groups="project.group_project_manager"/>
		<!-- Define menus END -->
		

		
		<record model="ir.ui.view" id="view_project_roles_form">
			<field name="name">Project Roles</field>
			<field name="model">project.role</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Project roles" create="0" delete="0">
					<field name="project_id" readonly="1"/>
					<field name="role_id" readonly="1"/>
					<field name="selected_effort" readonly="1"/>
					<field name="hours_planned_monthly" readonly="1"/>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_project_roles_tree">
			<field name="name">Project Roles</field>
			<field name="model">project.role</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Project roles" create="0" delete="0">
					<field name="project_id" readonly="1"/>
					<field name="role_id" readonly="1"/>
					<field name="selected_effort" readonly="1"/>
					<field name="hours_planned_monthly" readonly="1"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_project_roles_tab_tree">
			<field name="name">Project Members</field>
			<field name="model">project.member</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Project Member" editable="buttom" colors="grey:(date_in_role_from&gt;current_date) or (date_in_role_until&lt;current_date)">
					<field name="project_id" invisible="1"/>
					<field name="employee_id" context="{'current_model':'project.project'}" options="{'create': false, 'create_edit': false}"/>
					<field name="project_role_id" domain="[('project_id', '=', parent.id)]" options="{'create': false, 'create_edit': false}"/>
					<field name="date_in_role_from"/>
					<field name="date_in_role_until"/>
					<field name="hours_planned_monthly"/> 
				</tree>
			</field>
		</record>
		
	</data>
</openerp>
